@model HQ4A.Models.Productos

@{
    ViewBag.Title = "Actualizar";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group row">
        <div class="col-md-6">
            @Html.DisplayNameFor(x => x.NombreProducto)
            @Html.EditorFor(x => x.NombreProducto, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-6">
            @Html.DisplayNameFor(x => x.Descripcion)
            @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            @Html.DisplayNameFor(x => x.Precio)
            @Html.EditorFor(x => x.Precio, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-6">
            @Html.DisplayNameFor(x => x.Stock)
            @Html.EditorFor(x => x.Stock, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-md-6">
            @Html.DisplayNameFor(x => x.Proveedores.NombreProveedor)
            @Html.DropDownList("IdProveedor", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <input type="submit" class="btn btn-sm btn-warning" value="Actualizar Datos" />
    </div>
    <div class="form-group row justify-content-center">
        @Html.ActionLink("Cancelar", "Principal", null, new { @class = "btn btn-sm btn-secondary" })
    </div>
}


