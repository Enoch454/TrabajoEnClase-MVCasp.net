@model HQ4A.Models.Productos

@{
    ViewBag.Title = "Eliminar Producto";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.NombreProducto)
    <div class="form-group row">
        <div class="col-md-12">
            <h2 class="text-center text-danger">¿Realmente desea eliminar el producto: "@Model.NombreProducto"?</h2>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <input type="submit" class="btn btn-sm btn-danger" value="Eliminar" />
    </div>
    <div class="form-group row justify-content-center">
        @Html.ActionLink("Cancelar", "Principal", null, new { @class = "btn btn-sm btn-secondary" })
    </div>
}
