
@{
    ViewBag.Title = "Login";
}

    <div class="form-group row justify-content-center">
        <div class="col-6">
            <h3 class="text-center text-info">Login con Form HTML</h3>
            <form method="post" action="">
                <label>Usuario</label>
                <input type="text" class="form-control" name="txtUsuario" />
                <br />
                <label>Contraseña</label>
                <input type="password" class="form-control" name="txtPassword" />
                <br />
                <input type="submit" value="Iniciar Sesión" class="btn btn-sm btn-info" />
                <br />
                <p class="text-danger">@ViewBag.Error</p>
            </form>
        </div>
        <div class="col-6">
            <h3 class="text-center text-success">Login con Form de Razor</h3>
            @using (Html.BeginForm())
            {
                <label>Usuario</label>
                <input type="text" class="form-control" name="txtUsuario" />
                <br />
                <label>Contraseña</label>
                <input type="password" class="form-control" name="txtPassword" />
                <br />
                <input type="submit" value="Iniciar Sesión" class="btn btn-sm btn-success" />
                <br />
                <p class="text-danger">@ViewBag.Error</p>
            }
        </div>
    </div>

