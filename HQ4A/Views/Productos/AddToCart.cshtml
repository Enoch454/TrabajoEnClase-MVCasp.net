@model HQ4A.Models.OrdenVenta

@{
    ViewBag.Title = "Agregar Al Carrito";
}

<h2 class="text-center text-info">Agregar Al Carrito</h2>
<br />
@using (Html.BeginForm())
{
    <input type="hidden" value="@ViewBag.IdProducto" name="IdProducto"/>
    <div class="form-group row justify-content-center">
        <div class="col-md-6">
            @Html.DisplayNameFor(x => x.Nombre)
            @Html.EditorFor(x => x.Nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-md-3">
            @Html.DisplayNameFor(x => x.Precio)
            @Html.EditorFor(x => x.Precio, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
        <div class="col-md-3">
            @Html.DisplayNameFor(x => x.Cantidad)
            @Html.EditorFor(x => x.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-md-3 text-center">
            <input type="submit" class="btn btn-success rounded-pill btn-block" value="Agregar" />
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-md-12 text-center">
            @Html.ActionLink("Cancelar", "Principal", null, new { @class = "btn btn-link" })
        </div>
    </div>
}
@if (ViewBag.Error != null)
{
    <small class="text-danger">@ViewBag.Error</small>
}
