@model IEnumerable<HQ4A.Models.OrdenVenta>

@{
    ViewBag.Title = "Carrito de Compra";
}

    <table class="table table-borderless table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                <th>@Html.DisplayNameFor(x => x.Cantidad)</th>
                <th>@Html.DisplayNameFor(x => x.Precio)</th>
                <th>@Html.DisplayNameFor(x => x.SubTotal)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(x => item.Nombre)</td>
                <td>@Html.DisplayFor(x => item.Cantidad)</td>
                <td>@Html.DisplayFor(x => item.Precio)</td>
                <td>@Html.DisplayFor(x => item.SubTotal)</td>
            </tr>
            }
            <tr>
                <td><b>Total</b></td>
                <td></td>
                <td></td>
                <td>
                    @TempData["Total"]
                </td>
            </tr>
        </tbody>
    </table>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 text-center">
            @Html.ActionLink("Pagar Carrito", "PayCart", null, new { @class = "btn btn-success rounded-pill btn-block" })
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-md-12 text-center">
            @Html.ActionLink("Volver a Productos", "Principal", null, new { @class = "btn btn-link" })
        </div>
    </div>