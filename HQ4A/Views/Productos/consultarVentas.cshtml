@model IEnumerable<HQ4A.Models.Ventas>

@{
    ViewBag.Title = "consultarVentas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta de Ventas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuarios.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuarios.Nombre)
            </td>
            <td>
                @Html.ActionLink("Ver Detalles", "DetalleVenta", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
@Html.ActionLink("Regresar", "Principal", null, new { @class = "btn btn-success" })

