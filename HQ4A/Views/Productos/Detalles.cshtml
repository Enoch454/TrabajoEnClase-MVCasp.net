@model HQ4A.Models.Productos

@{
    ViewBag.Title = "Detalles";
}

<div class="form-group row">
    <div class="col-md-6">
        @Html.DisplayNameFor(x => x.NombreProducto)
        @Html.EditorFor(x => x.NombreProducto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
    <div class="col-md-6">
        @Html.DisplayNameFor(x => x.Descripcion)
        @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control", @readonly = "readonly" })
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">
        @Html.DisplayNameFor(x => x.Precio)
        @Html.EditorFor(x => x.Precio, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
    <div class="col-md-6">
        @Html.DisplayNameFor(x => x.Stock)
        @Html.EditorFor(x => x.Stock, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
</div>
<div class="form-group row justify-content-center">
    <div class="col-md-6">
        @Html.DisplayNameFor(x => x.Proveedores.NombreProveedor)
        @Html.EditorFor(x => x.Proveedores.NombreProveedor, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
</div>
<div class="form-group row justify-content-center">
    @Html.ActionLink("Entendido", "Principal", null, new { @class = "btn btn-sm btn-secondary" })
</div>

